{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container">
    <h1>Страница редактирования регистрационных сведений</h1>
    {% for label, messages in app.flashes(['danger', 'notice']) %}
        {% for message in messages %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['info', 'notice']) %}
        {% for message in messages %}
            <div class="alert alert-info" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ include('user/_form.html.twig', {'button_label': 'Обновить'}) }}

    <a class="btn btn-primary" href="{{ path('app_user_show', {'id': app.user.id}) }}">Назад</a>
    <br><br>
    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
