{% extends 'base.html.twig' %}

{% block title %}Wallet index{% endblock %}

{% block body %}
<div class="container-xxl col-sm-8  shadow p-3 mb-1 mt-3 rounded-0">
    <h1 class="d-flex justify-content-center text-white mb-5" style="background: #5eabeb;">Все кошельки пользователей</h1>
    {% for label, messages in app.flashes(['success', 'notice']) %}
            {% for message in messages %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['info', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-info" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['danger', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['warning', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}            
    {% endfor %}
    <div class="col-sm-4 mb-3 mt-3">
            <div class="card text-secondary  mb-1 bg-light rounded-0">
                <div class="card-body d-flex justify-content-between">    
                    <span><h6 class="card-title">Сумма всех кошельков USDT</h6></span>
                    <span><h6 class="card-title text-info">{{ wallet_summ_usdt }}</h6></span>    
                </div>
                <div class="card-body d-flex justify-content-between">    
                    <span><h6 class="card-title">Сумма всех кошельков Cometpoin</h6></span>
                    <span><h6 class="card-title text-info">{{ wallet_summ_cometpoin }} </h6></span>    
                </div>
                <div class="card-body d-flex justify-content-between">    
                    <span><h6 class="card-title">Сумма всех кошельков Etherium</h6></span>
                    <span><h6 class="card-title text-info">{{ wallet_summ_etherium }} </h6></span>    
                </div>
                <div class="card-body d-flex justify-content-between">    
                    <span><h6 class="card-title">Сумма всех кошельков Bitkoin</h6></span>
                    <span><h6 class="card-title text-info">{{ wallet_summ_bitcoin }} </h6></span>    
                </div>
            </div>
    </div>
    <a class="btn btn-success rounded-0 mb-3" href="{{ path('app_wallet_new') }}">Создать новый</a>
    <a class="btn btn-info rounded-0 mb-3" href="{{ path('app_admin') }}">В кабинет администратора</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usdt</th>
                <th>Etherium</th>
                <th>Bitcoin</th>
                <th>Cometpoin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wallet in wallets %}
            <tr>
                <td>{{ wallet.Id }}</td>
                <td>{{ wallet.Usdt }}</td>
                <td>{{ wallet.etherium }}</td>
                <td>{{ wallet.bitcoin }}</td>
                <td>{{ wallet.cometpoin }}</td>
                <td>
                    <a class="btn btn-info rounded-0 mb-1" href="{{ path('app_wallet_show', {'id': wallet.id}) }}">Открыть</a>
                    <a class="btn btn-info rounded-0 mb-1" href="{{ path('app_wallet_edit', {'id': wallet.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
