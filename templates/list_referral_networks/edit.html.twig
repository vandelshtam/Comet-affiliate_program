{% extends 'base.html.twig' %}

{% block title %}Edit ListReferralNetworks{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %} 
<div class="container-xxl">  
    <h1>Edit ListReferralNetworks</h1>
{% for label, messages in app.flashes(['success', 'notice']) %}
            {% for message in messages %}
                <div class="alert alert-success rounded-0" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['info', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-info rounded-0" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['danger', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger rounded-0" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['warning', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger rounded-0" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}            
    {% endfor %}
    {{ include('list_referral_networks/_form.html.twig', {'button_label': 'Обновить'}) }}
{% endif %}
    <a class="btn btn-primary rounded-0 mb-1" href="{{ path('app_list_referral_networks_index') }}">Назад</a>
{% if is_granted('ROLE_ADMIN') %} 
    {{ include('list_referral_networks/_delete_form.html.twig') }}
</div>
{% endif %}
{% endblock %}
