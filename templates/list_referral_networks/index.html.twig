{% extends 'base.html.twig' %}

{% block title %}ListReferralNetworks index{% endblock %}

{% block body %}
    <h1>ListReferralNetworks index</h1>
    {% for label, messages in app.flashes(['success', 'notice']) %}
            {% for message in messages %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['info', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-info" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['danger', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название реферальной сети</th>
                {# <th>Referral_networks_id</th>
                <th>Owner_id</th> #}
                <th>Организатор сети</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for list_referral_network in list_referral_networks %}
            <tr>
                <td>{{ list_referral_network.id }}</td>
                <td>{{ list_referral_network.name }}</td>
                {# <td>{{ list_referral_network.referralNetworksId }}</td>
                <td>{{ list_referral_network.ownerId }}</td> #}
                <td>{{ list_referral_network.ownerName }}</td>
                <td>
                    <a href="{{ path('app_list_referral_networks_show', {'id': list_referral_network.id}) }}">show</a>
                    <a href="{{ path('app_list_referral_networks_edit', {'id': list_referral_network.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_list_referral_networks_new') }}">Create new</a> #}
{% endblock %}
