{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ controller_name }}</h1>
    {% for label, messages in app.flashes(['success', 'notice']) %}
            {% for message in messages %}
                <div class="alert alert-success rounded-0" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['info', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-info rounded-0" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['danger', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger rounded-0" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['warning', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger rounded-0" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}            
    {% endfor %}
    <a  class="btn btn-secondary mb-3" href="{{ path('app_personal_area') }}">Перейти в личный кабинет</a>
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Название реферальной сети</th>
                <th>Сумма выплат по программе Direct</th>
                <th>Сумма выплат в сети по программе Cash back</th>
                <th>Организатор сети</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for list_referral_network in list_referral_networks %}
            <tr>
                {# <td>{{ list_referral_network.id }}</td> #}
                <td>{{ list_referral_network.name }}</td>
                <td>{{ list_referral_network.paymentsDirect }} USDT</td>
                <td>{{ list_referral_network.paymentscash }} USDT</td>
                <td>{{ list_referral_network.ownerName }}</td>
                <td>
                    <a  class="btn btn-secondary mb-3" href="{{ path('app_list_referral_networks_show_list', {'id': list_referral_network.id}) }}">Посмотреть подробности</a>
                    
                    <a  class="btn btn-secondary mb-3" href="{{ path('app_referral_network_index') }}">Открыть список участников</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_list_referral_networks_new') }}">Create new</a> #}
{% endblock %}
