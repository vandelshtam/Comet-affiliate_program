{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ controller_name }}</h1>
    {% for label, messages in app.flashes(['success', 'notice']) %}
            {% for message in messages %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['info', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-info" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    {% for label, messages in app.flashes(['danger', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
    {% endfor %}
    <a class="btn btn-success" href="{{ path('app_pakege_new') }}">Добавить новый пакет</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>User_id</th>
                <th>Price</th>
                <th>Токен</th>
                <th>Реферальная ссылка</th>
                <th>Активация</th>
                <th>Referral_networks_id</th>
                <th>Уникальный код клиента</th>
                <th>Уникальный код пакета</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pakege in pakeges %}
            <tr>
                <td>{{ pakege.id }}</td>
                <td>{{ pakege.name }}</td>
                <td>{{ pakege.userId }}</td>
                <td>{{ pakege.price }}</td>
                <td>{{ pakege.token }}</td>
                <td>{{ pakege.referralLink }}</td>
                {% if pakege.activation == NULL %}
                <td>не активен</td>
                {% else %}
                <td>{{ pakege.activation }}</td>
                {% endif %}
                <td>{{ pakege.referralNetworksId }}</td>
                <td>{{ pakege.clientCode }}</td>
                <td>{{ pakege.uniqueCode }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('app_pakege_show', {'id': pakege.id}) }}">Посмотреть</a>
                    {# <a href="{{ path('app_pakege_edit', {'id': pakege.id}) }}">edit</a> #}
                    {% if pakege.activation == NULL %}
                    <a href="{{ path('app_list_referral_networks_new', {'id': pakege.id}) }}">Активировать</a>
                     {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
