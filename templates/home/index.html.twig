{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="pb-3 pt-3 mb-0" style="background: rgb(223, 230, 245);">
    <div class="container-xxl" style="background: rgb(223, 230, 245);">
        <h1 class="d-flex justify-content-center mb-1 mt-0 pb-3 pt-2" style="color:  rgb(72, 109, 169);">{{ controller_name | trans }}</h1>
        {% for label, messages in app.flashes(['success', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-success rounded-0" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
        {% endfor %}
        {% for label, messages in app.flashes(['info', 'notice']) %}
                    {% for message in messages %}
                        <div class="alert alert-info rounded-0" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
        {% endfor %}
        {% for label, messages in app.flashes(['danger', 'notice']) %}
                    {% for message in messages %}
                        <div class="alert alert-danger rounded-0" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
        {% endfor %}
        {% for label, messages in app.flashes(['warning', 'notice']) %}
                    {% for message in messages %}
                        <div class="alert alert-danger rounded-0" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}            
        {% endfor %}
        <div class="timer justify-content-center">
            <h1 class="d-flex fst-italic justify-content-center text-center mb-1 mt-0 pb-3 pt-2" style="color:  rgb(72, 109, 169);">{{ 'main.start_project' | trans }} </h1>
            <div class="timer__items justify-content-center mb-3 fst-italic" style="color:  rgb(72, 109, 169);">   
                <div class="timer__item timer__days">00</div>
                <div class="timer__item timer__hours">00</div>
                <div class="timer__item timer__minutes">00</div>
                <div class="timer__item timer__seconds">00</div>
            </div>
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if user.PersonalDataId == 0 %}
      <div class="alert alert-warning rounded-0" role="alert">
      {{ 'main.inform'|trans }}:
          <ul>
              <li>{{ 'main.inform_text'|trans }}<code><a href="{{ path('app_personal_data_new', {'user_id': user.id}) }}">{{ 'main.inform_link'|trans }}</a></code></li>
          </ul>
      </div>
      {% endif %}
      {% endif %}
        <div class="shadow mb-3 bg-white">
                <div class="row ">    
                    <div class="col-sm-3 text-center rounded-0">
                        <div class=" ">
                        <img src="{{ asset('asset/img/cometa-project-logo.jpg') }}" class="card-img-top rounded-0" alt="..." style="max-width: 500px;">    
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="mt-3">
                            <div class="card-body  mt-0">
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_one'|trans }}
                                </h5>
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_two'|trans }}
                                </h5>
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_three'|trans }}
                                </h5>
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_four'|trans }} 
                                </h5>
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_five'|trans }}
                                </h5>
                                <p class="card-text fw-lighter fst-italic">{{ 'main.cometa_administration'|trans }}</p>   
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="">
                            <div class="card-body row">
                                <a  class="nav-link fw-bold fst-italic fs-5 mb-1 border-0 pl-0 text-end bg-white" href="{{ path('app_pakege_new',{'unique_code_get' : 'not' }) }}">{{ 'main.cometa_description_link'|trans }}</a>
                                {# {% if is_granted('ROLE_ADMIN') %}   
                                <a class="nav-link fw-bold fst-italic fs-5 mb-1 border-0 pl-0 text-end bg-white" href="">Посмотреть</a> 
                                <a class="nav-link fw-bold fst-italic fs-5 mb-1 border-0 pl-0 text-end text-warning bg-white" href="">Редактировать</a>
                                {% endif %} #}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <div class="shadow mb-3 bg-white">
                <div class="row ">    
                    <div class="col-sm-3 text-center rounded-0">
                        <div class=" ">
                        <img src="{{ asset('asset/img/tehnologiya_blokcheyn-1.jpeg') }}" class="card-img-top rounded-0" alt="..." style="max-width: 500px;">    
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="mt-3">
                            <div class="card-body  mt-0">
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_one_two'|trans }}</h5>
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_two_two'|trans }}</h5>
