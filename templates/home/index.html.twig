                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_four_two'|trans }}
                                </h5>
                                <h5 class="card-title  fst-italic text-secondary">{{ 'main.cometa_description_five_two'|trans }}
                                </h5>
                                <p class="card-text fw-lighter fst-italic">{{ 'main.cometa_administration'|trans }}</p>   </p>   
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="">
                            <div class="card-body row">
                                <a  class="nav-link fw-bold fst-italic fs-5 mb-1 border-0 pl-0 text-end bg-white" href="{{ path('app_about_project') }}">{{ 'main.cometa_description_link_two'|trans }}</a>
