{% extends 'base.html.twig' %}

{% block title %}SettingOptions index{% endblock %}

{% block body %}
<div class=" col-sm-12  shadow p-3 mb-1 mt-3 rounded-0">
    <h1 class="d-flex justify-content-center text-white mb-5" style="background: #5eabeb;">Настройка опций управления сетью</h1>
    <a  class="btn btn-info rounded-0 mb-3" href="{{ path('app_admin') }}">Перейти в кабинет Администратора</a>
{% for label, messages in app.flashes(['success', 'notice']) %}
                    {% for message in messages %}
                        <div class="alert alert-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
            {% endfor %}
            {% for label, messages in app.flashes(['info', 'notice']) %}
                        {% for message in messages %}
                            <div class="alert alert-info" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
            {% endfor %}
            {% for label, messages in app.flashes(['danger', 'notice']) %}
                        {% for message in messages %}
                            <div class="alert alert-danger" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
            {% endfor %}
            {% for label, messages in app.flashes(['warning', 'notice']) %}
                {% for message in messages %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}            
            {% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Начисление по программе Сash back (singl line) %</th>
                <th>Начисление по программе direct (за приглашенного участника) %</th>
                <th>Лимит начислений Cash_back в линии %</th>
                <th>Предельная сумма когда наисляются выплаты Сash back tokens local</th>
                <th>Предельный коэффициент выплат в сеть участникам %</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting_option in setting_options %}
            <tr>
                <td>{{ setting_option.id }}</td>
                <td>{{ setting_option.paymentsSingleline }}</td>
                <td>{{ setting_option.paymentsDirect }}</td>
                <td>{{ setting_option.cashBack }}</td>
                <td>{{ setting_option.allPricePakage }}</td>
                <td>{{ setting_option.accrualLimit }}</td>
                <td>
                    <a class="btn btn-info rounded-0 mb-1" href="{{ path('app_setting_options_show', {'id': setting_option.id}) }}">Посмотреть</a>
                    <a class="btn btn-info rounded-0 mb-1" href="{{ path('app_setting_options_edit', {'id': setting_option.id}) }}">Редкатировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info rounded-0 mb-1" href="{{ path('app_setting_options_new') }}">Создать новую опцию</a>
</div>
{% endblock %}
